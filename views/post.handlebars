<div class="text-center" id="post">
  <h2 >{{name}}</h2>
  <p >{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  
  {{#each comments as |comment|}}

  <p>{{comment.user.name}} says: "{{comment.content}}"</p>
  <p>on {{format_date comment.date_created}}</p>

  {{/each}}
</div>
<form class="form new-comment-form">
      <div class="form-group">
        <label for="post-desc">Comment:</label>
        <textarea class="form-input" id="comment" name="comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn">Create</button>
      </div>
    </form>

<script src="/js/comment.js"></script>